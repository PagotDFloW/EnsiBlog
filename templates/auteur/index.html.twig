{% extends 'base.html.twig' %}

{% block title %}Hello AuteurController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>

    <ul>
        {% if auteurs is not empty %}
            {% for auteur in auteurs %}
                <li>{{ auteur.nom }} | {{ auteur.email }} <a href="{{ path('app_auteur_update', {'id': auteur.id}) }}">Modifier</a> </li>
            {% endfor %}
        {% else %}
            <li>pas d'utilisateur</li>
        {% endif %}
    </ul>
    <a href="{{ path('app_auteur_create') }}">Créer un nouvel auteur</a>
</div>
{% endblock %}
